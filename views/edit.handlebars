<form action="/records/{{ record._id }}?_method=PUT" method="POST">
  <div class="row mt-5">
    <div class="col m-auto">
      <div class="row justify-content-center mt-5">
        <div class="col-2">
          <span class="text-danger">*</span>為必填欄位</p>
        </div>
        <div class="col-3">
          <h2>請修改你的支出</h2>
        </div>
      </div>


      <div class="row mt-5 justify-content-center">
        <div class="col-auto">
          <label for="name" class="form-label h3">名稱<span class="text-danger">*</span>：</label>
        </div>

        <div class="col-4">
          <input type="text" class="form-control" id="name" aria-describedby="name" name="name" size="4" value="{{record.name}}" required>
        </div>
      </div>

      <div class="row mt-5 justify-content-center">
        <div class="col-auto">
          <label for="date" class="form-label h3">日期<span class="text-danger">*</span>：</label>
        </div>
        <div class="col-4">
          <input type="date" class="form-control p-2 flex-grow-1" id="date" aria-describedby="date" placeholder="date"
            name="date" value="{{record.date}}" required>
        </div>
      </div>

      <div class="row mt-5 justify-content-center">
        <div class="col-auto">
          <label for="date" class="form-label h3">類別<span class="text-danger">*</span>：</label>
        </div>
        <div class="col-4">
          <select class="form-select" id="category" name="category" required>
            <option value="">類別</option>
            {{#each categories}}
            <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="row mt-5 justify-content-center">
        <div class="col-auto">
          <label for="amount" class="form-label h3">金額<span class="text-danger">*</span>：</label>
        </div>
        <div class="col-4">
          <input type="number" min="0" class="form-control p-2 flex-grow-1" id="amount" aria-describedby="amount"
            name="amount" value="{{record.amount}}" required>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-5">
        <button type="submit" class="btn btn-info">修改支出</button>
      </div>
    </div>
  </div>
</form>
